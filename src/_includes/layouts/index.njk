<!DOCTYPE html>
<html lang="{{ page.lang }}">
  {% include "components/head.njk" %}
  {% inclide "components/googletag.njk" %}
  <body class="is-preload">
    <div id="wrapper">
      {% include "components/nav.njk" %}
      <section id="banner" class="major">
        <div class="inner">
          <header class="major">
            <h1>{{ banner_title }}</h1>
          </header>
          <div class="content">
            <p>
              {{ banner_text1 }}<br/> {{ banner_text2 }}
            </p>
          </div>
        </div>
      </section>
      <div id="main">
        <section id="one" class="tiles">
          {% for item in art[page.lang] %}
            <article>
              <span
                class="image">
                {# <img src="{{ item.image }}" alt=" "/> #}
                {% image item.image, item.desc %}
              </span>
              <header class=" major">
                <h3>
                  <a href="{{ item.url }}/" class="link">{{ item.name }}</a>
                </h3>
                <p>{{ item.desc }}</p>
              </header>
            </article>
          {% endfor %}
        </section>
      </div>
      {% include "components/footer.njk" %}
    </div>
    {% include "components/js.njk" %}
  </body>
</html>
